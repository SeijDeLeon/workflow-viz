    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug App",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Debug Tiled",
            "type": "debugpy",
            "request": "launch",
            "module": "tiled",
            "args": [
                "serve",
                "config",
                "./tiled/config/config_tmp.yml"
            ],
            "justMyCode": false,
        },
    ]
}